<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.leonardo.pokemonapp.AddPokemonActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBarAddPokemon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="?attr/actionBarSize"
        app:theme="@style/AppTheme"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintHorizontal_bias="1">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_below="@+id/toolBarAddPokemon"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/add_pokemon_activity_pokemon_name_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:minHeight="30dp"
            android:minWidth="30dp"
            android:layout_gravity="center"
            android:id="@+id/add_pokemon_activity_pokemon_name_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person" />

        <EditText
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/add_pokemon_activity_pokemon_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/add_pokemon_activity_pokemon_name_lin"
        android:id="@+id/add_pokemon_activity_pokemon_description_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:minHeight="30dp"
            android:minWidth="30dp"
            android:layout_gravity="center"
            android:id="@+id/add_pokemon_activity_pokemon_description_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_description" />

        <EditText
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/add_pokemon_activity_pokemon_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"/>

    </LinearLayout>

    <Button
        android:id="@+id/add_pokemon_activity_pokemon_save_button"
        android:textAllCaps="false"
        android:textSize="21sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/save_added_pokemon"/>

</RelativeLayout>
