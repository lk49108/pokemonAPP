<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:scaleType="centerInside"
            android:id="@+id/fragment_pokemon_add_image_pokemon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:src="@drawable/ic_person"
            android:background="@color/defaultImageBackgroundColor"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:minHeight="25dp"
                        android:minWidth="25dp"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_person"
                        />

                    <EditText
                        android:textColor="@color/colorPrimary"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/fragment_pokemon_add_option_name"
                        android:layout_width="0dp"
                        android:hint="Name"
                        android:text="ime"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Space
                        android:layout_gravity="center_vertical"
                        android:minHeight="25dp"
                        android:minWidth="25dp"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content"
                        />

                    <EditText
                        android:textColor="@color/colorPrimary"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/fragment_pokemon_add_option_height"
                        android:layout_width="0dp"
                        android:hint="Height"
                        android:text="100"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Space
                        android:layout_gravity="center_vertical"
                        android:minHeight="25dp"
                        android:minWidth="25dp"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content"
                        />

                    <EditText
                        android:textColor="@color/colorPrimary"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/fragment_pokemon_add_option_weight"
                        android:layout_width="0dp"
                        android:hint="Weight"
                        android:text="20"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Space
                        android:layout_gravity="center_vertical"
                        android:minHeight="25dp"
                        android:minWidth="25dp"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content"
                        />

                    <EditText
                        android:textColor="@color/colorPrimary"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/fragment_pokemon_add_option_category"
                        android:layout_width="0dp"
                        android:hint="Category"
                        android:text="kategorija"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Space
                        android:layout_gravity="center_vertical"
                        android:minHeight="25dp"
                        android:minWidth="25dp"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content"
                        />

                    <EditText
                        android:textColor="@color/colorPrimary"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/fragment_pokemon_add_option_abilities"
                        android:layout_width="0dp"
                        android:hint="Abilities"
                        android:text="abilitiji"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:minHeight="25dp"
                        android:minWidth="25dp"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_description"
                        />

                    <EditText
                        android:textColor="@color/colorPrimary"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/fragment_pokemon_add_option_description"
                        android:layout_width="0dp"
                        android:hint="Description"
                        android:text="opis"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/fragment_pokemon_add_button_save"
            android:textAllCaps="false"
            android:textSize="21sp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="@string/save_added_pokemon"/>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fragment_pokemon_add_button_floating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:src="@drawable/ic_add"
        app:layout_anchor="@id/fragment_pokemon_add_image_pokemon"
        app:layout_anchorGravity="bottom|right"
        style="@style/FABTint"/>

</android.support.design.widget.CoordinatorLayout>